{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block body %}

	<h1 class="text-center text-green text-4xl">Famille des
		{{family.name}}</h1>

	<div class="flex flex-wrap justify-center mx-10 xl:mx-52 ">


		{% for huile in huiles|sort((a, b) => a.name <=> b.name) %}
			{% if huile.active %}

				<a href="{{path('huile_read', {id: huile.id, slug:huile.slug})}}" class="no-underline mx-10 mt-10 mb-20 ">
					<div class="h-96 cursor-pointer rounded-lg">
						<div id="carouselExampleControls" class="carousel slide w-80" data-bs-ride="carousel">
							<div class="carousel-inner">
								{% for image in huile.images %}
									<div class="carousel-item {% if loop.first %} active {% endif %}">
										<img src="{{ asset('/uploads/'~ image.name)}}" alt="Image" width="150">
									</div>
								{% endfor %}
								{% if huile.images.isempty %}
									<div class="border-2 border-black rounded-lg text-center text-black uppercase font-semibold text-xl py-3 bg-gray-100">
										<span>Image non disponible</span>
										<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" fill="currentcolor" class="bi bi-image mx-auto" viewbox="0 0 16 16">
											<path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
											<path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
										</svg>
									</div>
								{% endif %}
							</div>
						</div>
					</div>
					<div class="">
						<span class="font-bold text-xl  text-green">{{huile.name}}</span>
					</div>
				</a>
			{% else %}
				<div class="h-96"></div>
			{% endif %}
		{% endfor %}


	</div>
{% endblock %}
