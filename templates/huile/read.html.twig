				<!--<a href="{{path('app_login')}}" ><button class="btn btn-success">Ajouter au panier</button></a>-->
				<!--{% endif %}-->
				<!--lien ci-dessous factice-->
					<a href="#" class=" no-underline text-green border-green border-2 rounded-lg p-2 my-2"> Ajouter au panier</a>

			</div>
		</div>
	</div>
{% endblock %}
