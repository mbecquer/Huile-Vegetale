{% extends "base.html.twig" %}

{% block title %}
	{{huile.name}}
{% endblock %}

{% block body %}

	<div class="flex flex-wrap justify-evenly text-xl my-10 xl:mx-96 shadow-lg py-4 rounded-lg">

		<div id="carouselExampleControls" class="carousel slide xl:w-96 " data-bs-ride="carousel">
			<div class="carousel-inner">
				{% for image in huile.images %}
					<div class="carousel-item {% if loop.first %} active {% endif %}">
						<img src="{{ asset('/uploads/'~ image.name)}}" alt="Image" style="height:600px; width:100%; object-fit:cover">
					</div>
				{% endfor %}

			</div>
			<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
				<span class="carousel-control-prev-icon bg-green-500 rounded-full" aria-hidden="true"></span>
				<span class="visually-hidden">Previous</span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
				<span class="carousel-control-next-icon bg-green-500 rounded-full" aria-hidden="true"></span>
				<span class="visually-hidden">Next</span>
			</button>

			{% if huile.images.isempty %}
				<div class="flex flex-col  rounded-lg text-center text-black uppercase font-semibold text-xl py-3 bg-gray-100">
					<span>Image non disponible</span>
					<span class="text-5xl">X</span>
				</div>
			{% endif %}
		</div>
		<div class="card">
			<div class="card-body">
				<h3 class="card-title text-green">{{huile.name}}</h3>
				<p class="card-text xl:w-96">
					<span class="font-semibold text-green">Description:</span>
					{{huile.description}}
				</p>
			</div>
			<ul class="list-group list-group-flush">
				<li class="list-group-item">
					<span class="font-semibold text-green">Prix:</span>
					{{huile.price}}
					€</li>
				<li class="list-group-item">
					<span class="font-semibold text-green">Capacité:</span>
					{{huile.capacity}}
					ml</li>
				<li class="list-group-item">
					<span class="font-semibold text-green">Utilisation:</span>
					<p class="xl:w-96">Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime mollitia, molestiae quas vel sint commodi repudiandae</p>
				</li>
			</ul>
			<div class="card-body">
				<!--{% if is_granted("ROLE_USER")%}-->
