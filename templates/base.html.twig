						</li>
						<li>
							<a class="no-underline" href="{{path('cart')}}">Mon panier</a>
						</li>

						<li>
							<a class="border-green border-2 rounded-lg p-2 no-underline" href="{{path('app_login')}}">Se connecter</a>
						</li>


						<li>
							<a class="border-green border-2 rounded-lg p-2 no-underline" href="{{path('app_logout')}}">Déconnexion</a>
						</li>
					{% endif %}
				</ul>


			</div>

