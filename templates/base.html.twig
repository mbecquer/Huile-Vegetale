		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}


	</head>
	<body>


		<nav class="flex sticky top-0 justify-evenly items-center h-32 lg:h-40  text-2xl bg-gray-50 filter drop-shadow-lg z-50 ">

			<a href="{{path('index')}}" title="Accueil"><img class="w-20 lg:w-40" src="{{ asset('/assets/logo-removebg-preview.png') }}"></a>

			<div class="menu-desktop text ">
				<a class="link text-blue  mx-2 no-underline" href="{{path('oils')}}">Huiles Végétales</a>
				{% if is_granted("ROLE_ADMIN")%}
					<a class="link text-blue  no-underline mx-2" href="{{path('admin_huiles_index')}}">Admin Huiles</a>
					<a class="link text-blue  no-underline" href="{{path('admin_article_index')}}">Admin Articles</a>
					<a class="link text-blue   mx-2 no-underline" href="{{path('blog_index')}}">Le blog</a>
					<a class="link text-blue   no-underline" href="{{path('cart')}}">Mon panier</a>
				{% endif %}

			</div>
			<!--menu mon compte-->

			{% if is_granted("ROLE_ADMIN")%}
				<div class="accordion menu-desktop" id="accordionExample">
					<div class="accordion-item">

						<button id="headingOne" class="accordion-header text-green text-xl border-green border-2 p-3 rounded-lg focus:outline-none " type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">Mon Compte</button>

						<div id="collapseOne" class="accordion-collapse collapse " aria-labelledby="headingOne" data-bs-parent="#accordionExample">
							<div class="accordion-body">
								<ul class="-mx-10 text">
									<li>
										<a class="link text-gray-600 text-xl" href="{{path('app_login')}}">Connexion</a>
									</li>
									<li>
										<a class="link text-gray-600 text-xl" href="{{path('app_logout')}}">Déconnexion</a>
									</li>

								</ul>
							</div>
						</div>
					</div>
				</div>
			{% endif %}

			<!--MENU MOBILE-->
			<div class="menu-btn ml-32">
				<span></span>
				<ul class="border-r-8 border-green border-dashed">
					{% if is_granted("ROLE_ADMIN")%}
						<li>
							<a class="no-underline" href="{{path('admin_huiles_index')}}">
								<p class="text-green">Admin Huiles</p>
							</a>
						</li>

						<li>
							<a class="no-underline" href="{{path('admin_article_index')}}">
								<p class="text-green">Admin Articles</p>
							</a>
						</li>
					{% endif %}
					<li>
						<a class="no-underline" href="{{path('oils')}}">Huiles Végétales</a>
					</li>
					{% if is_granted("ROLE_ADMIN")%}

						<li>
							<a class="no-underline" href="{{path('blog_index')}}">Blog</a>
						</li>
						<li>
							<a class="no-underline" href="{{path('cart')}}">Mon panier</a>
						</li>

						<li>
							<a class="border-green border-2 rounded-lg p-2 no-underline" href="{{path('app_login')}}">Se connecter</a>
						</li>


						<li>
							<a class="border-green border-2 rounded-lg p-2 no-underline" href="{{path('app_logout')}}">Déconnexion</a>
						</li>
					{% endif %}
				</ul>


			</div>

		</nav>

		<div class="text text-blue  text-2xl text-right mr-2 z-50 my-2 flex flex-col ">
			{% if app.user %}Vous êtes connecté<span class="text-green">{{ app.user.username }}</span>
			{% endif %}
		</div>
		<div class="mx-2"> {% block body %}{% endblock %}
			</div>
			<!--footer-->
			<div
				class=" background-blue py-52 text-white flex flex-col flex-wrap text-center justify-evenly xl:flex-row">
				<!--texte-->
				<div>
					<h1 class="text-6xl md:text-5xl text-green title">Huiles Végétales AK</h1>
					<p class="text-lg subtitle">Les huiles végétales, un véritable elixir</p>
				</div>
				<!--contact-->
				<div class="py-5 text-lg ">
					<a href="{{path('app_contact')}}" class="no-underline">


						<div class="border-2 border-white  py-3 rounded-lg relative w-52 mx-auto">

							<span class="text-white pl-5 text">Nous contacter</span>
							<span class="text-3xl absolute left-1 top-1">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-envelope-fill text-green" viewbox="0 0 16 16">
									<path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555zM0 4.697v7.104l5.803-3.558L0 4.697zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757zm3.436-.586L16 11.801V4.697l-5.803 3.546z"/>
								</svg>
							</span>
							<span class="text-3xl absolute left-1 bottom-1">
								<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-telephone-fill text-green" viewbox="0 0 16 16">
									<path fill-rule="evenodd" d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
								</svg>
							</span>
						</div>
					</a>
				</div><!--mentions--><div class="text-lg py-5 ">
					<a class="text-white text-survol no-underline text-lg text" href="{{path('mentions')}}">Mentions légales</a>
				</div>


			</div>
			{% block javascripts %}
				<script src="{{asset('js/main.js')}}"></script>
			{% endblock %}
		</body>
	</html>
