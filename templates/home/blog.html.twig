{% extends "base.html.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	<h1 class="text-center text-green text-4xl">{{title}}</h1>
	{% for article in articles %}
		<div
			class="flex flex-wrap ">
			<!--article-->

			<div
				class="flex flex-wrap my-5 rounded-lg shadow-lg  w-full justify-around xl:mx-20">
				<!--image article-->
				<div class="image-article w-60  my-5">
					{% for pictureArticle in article.pictureArticles %}
						<img class="object-cover rounded-lg " src="{{asset('/images/articles/'~ pictureArticle.name)}}">
					{% endfor %}
				</div>
				<!--text article-->
				<div class="w-96  my-5 px-2">
					<h2>{{article.title}}</h2>

					<p class="text-green">{{article.createdAt|date("d/m/Y")}}</p>
					<p class="text-lg text-justify">{{article.content}}</p>

				</div>
				<!--bouton en voir plus-->
				<div class=" flex items-center my-5 ">
					<a href="{{path('blog_read', {'id': article.id})}}">
						<button class="text-green text-xl border-green border-2 p-3 rounded-lg focus:outline-none ">En voir plus</button>
					</a>
				</div>
			</div>
		</div>
	{% endfor %}
{% endblock %}
