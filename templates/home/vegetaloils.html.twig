{% extends "base.html.twig" %}
{% block title %}
	{{title}}
{% endblock %}
{% block body %}
	<h1>Huiles vegetales de graines germees et des oléagineux activés</h1>
	<div
		class="container-vegetaloils">
		<!--nouveautés-->
		<div class="news">
			<h3>Nouveautés</h3>
			<div class="container-card">
				{% for huile in huiles %}
					{% if huile.createdAt < date('2months') %}
						<div class="card">
							<div class="card-img">
								{% for image in huile.images %}
									<div class="carousel-item {% if loop.first %} active {% endif %}">
										<img src="{{ asset('/uploads/'~ image.name)}}" alt="Image" class="card-img-top">
									</div>
								{% endfor %}
								{% if huile.images.isempty %}
									<div class="flex flex-col text-center text-black uppercase font-semibold text-xl py-5 bg-gray-100">
										<span>Image non disponible</span>
									</div>
								{% endif %}
							</div>
							<div class="card-body">
								<div class="card-title">
									<h3>{{huile.name}}</h3>
								</div>
								<div class="card-link">
									<button>
										<a href="{{path('huile_read', {id: huile.id, slug:huile.slug})}}">Voir le produit</a>
									</button>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
		<!--familles botaniques-->
		<div class="familles">
			<h3>Familles botaniques</h3>
			<div class="container-card">
				<div class="card">
					<div class="card-img"></div>
					<div class="card-body">
						<div class="card-title"></div>
						<div class="card-link"></div>
					</div>
				</div>
			</div>
		</div>
		<!--méthodes de production-->
		<div class="methodeProduction">
			<h3>Méthodes de production</h3>
			<div class="container-card">
				<div class="card">
					<div class="card-img"></div>
					<div class="card-body">
						<div class="card-title"></div>
						<div class="card-link"></div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<div
		class="container-fluid flex flex-wrap justify-evenly my-10">


		<!--famille-->
		<div class="card w-96 h-full">
			<div class="card-title">
				<h2>Familles botaniques</h2>
			</div>
			<div class="card-body">
				<div class="overflow-y-auto h-96 bg-gray-50 ">
					<ul class=" divide-y divide-green-700 text ">
						{% for family in families|sort((a, b) => a.name <=> b.name) %}
							{% if family.active %}
								<li class="py-2 text-green hover:bg-gray-200 ">
									<a class="no-underline text-green uppercase  text-lg link" href="{{path('family_huile',{id:family.id, slug:family.slug })}}">{{family.name}}
									</a>
								</li>
							{% endif %}
						{% endfor %}
					</ul>
				</div>
			</div>
		</div>
		<!--méthode de production-->
		<div class="card w-96">
			<div class="card-title">
				<h2 class="text-center text-green text-4xl subtitle">Méthode de production</h2>
			</div>
			<div class="card-body ">
				<h3>Parties utilisées: Graines et oléagineux
				</h3>
