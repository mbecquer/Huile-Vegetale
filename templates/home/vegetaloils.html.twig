{% extends "base.html.twig" %}
{% block title %}
	{{title}}
{% endblock %}
{% block body %}
	<h1>Huiles vegetales de graines germees et des oléagineux activés</h1>
	<div
		class="container-vegetaloils">
		<!--nouveautés-->
		<div class="news">
			<h3>Nouveautés</h3>
			<span>
				<i class="fa fa-chevron-up" aria-hidden="true"></i>
			</span>
			<div class="container-card">
				{% for huile in huiles %}
					{% if huile.createdAt < date('2months') %}
						<div class="card">
							<div class="card-img">
								{% for image in huile.images %}
									<div class="carousel-item {% if loop.first %} active {% endif %}">
										<img src="{{ asset('/uploads/'~ image.name)}}" alt="Image" class="card-img-top">
									</div>
								{% endfor %}
								{% if huile.images.isempty %}
									<div>
										<span>Image non disponible</span>
									</div>
								{% endif %}
							</div>
							<div class="card-body">
								<div class="card-title">
									<h3>{{huile.name}}</h3>
								</div>
								<div class="card-link">
									<button>
										<a href="{{path('huile_read', {id: huile.id, slug:huile.slug})}}">Voir le produit</a>
									</button>
								</div>
							</div>
						</div>
					{% endif %}
				{% endfor %}
			</div>
			<span>
				<i class="fa fa-chevron-down" aria-hidden="true"></i>
			</span>
		</div>
		<!--familles botaniques-->
		<div class="familles">
			<h3>Familles botaniques</h3>
			<div class="card">
				<div class="card-body">
					<div class="card-link">
						<ul>
							{% for family in families|sort((a, b) => a.name <=> b.name) %}
								{% if family.active %}
									<li>
										<a href="{{path('family_huile',{id:family.id, slug:family.slug })}}">{{family.name}}
										</a>
									</li>
								{% endif %}
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!--méthodes de production-->
		<div class="methodeProduction">
			<h3>Méthodes de production</h3>
			<div class="card">
				<div class="card-body">
					<div class="card-title">
						<h3>Parties utilisées: Graines et oléagineux
						</h3>
