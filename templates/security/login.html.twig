{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}


	<!--login-->
	<div class="mx-10 sm:mx-auto sm:w-96 shadow-lg rounded-lg my-5">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mx-3 my-3 text-lg">
					Vous êtes déjà connecté
					<span class="text-green">{{ app.user.username }}</span>,
					<a href="{{ path('app_logout') }}">Déconnexion
					</a>

				</div>
			{% endif %}
			<div class="mx-auto xl:w-96  p-5 ">

				<h1 class="text-green text-center text-4xl">Connexion</h1>
				<label for="inputEmail">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
				<label class="mt-3" for="inputPassword">Mot de passe</label>
				<input type="password" name="password" id="inputPassword" class="form-control" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="text-green text-xl border-green border-2 p-3 rounded-lg focus:outline-none my-5" type="submit">

					Se connecter
				</button>
			</div>
		</form>
		<span class="mx-3 text-lg">Pas encore inscrit ?
			<a href="{{path('app_register')}}">Cliquez ici !</a>
		</span>
	</div>


{% endblock %}
