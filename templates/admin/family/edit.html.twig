{% extends "base.html.twig" %}

{% block title %}Edition Famille
{% endblock %}

{% block body %}
	<div class="section"></div>
	<h1 class="text-center">Modifier la famille :
		<span class="text-green">{{family.name}}</span>
	</h1>
	<div class="flex justify-center ">


		<div class="p-5 shadow-lg rounded-lg">
			{{form_start(form) }}
			{{form_row(form.name)}}
			{{form_row(form.story)}}
			{{form_row(form.active)}}
			<button class="text-green  text-xl border-green border-2 p-3 rounded-lg focus:outline-none my-5" type="submit">Enregistrer</button>

			{{form_end(form)}}
		</div>


	</div>

{% endblock %}
